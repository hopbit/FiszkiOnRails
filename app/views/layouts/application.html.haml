    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js"
  %body
    %nav.navbar.navbar-inverse.navbar-static-top
      .container-fluid
        .navbaer-header
          %a.navbar-brand(href="#") FiszkiOnRails


    .container
      .row
        = bootstrap_flash
        = yield

      %footer
        %p &copy; FiszkiOnRails 2017
