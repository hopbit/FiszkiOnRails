= form_for @card, html: { class: "form form-horizontal card" } do |f|
  .form-group
    = f.label :deck_id, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :deck_id, class: 'form-control', required: true
    = f.error_span(:deck_id)
  .form-group
    = f.label :front, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :front, class: 'form-control', required: true
    = f.error_span(:front)
  .form-group
    = f.label :back, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :back, class: 'form-control', required: true
    = f.error_span(:back)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), cards_path, :class => 'btn btn-default'
