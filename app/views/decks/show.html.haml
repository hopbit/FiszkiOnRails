- model_class = Deck
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @deck.user_id
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @deck.name


= link_to t('.back', :default => t("helpers.links.back")), decks_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_deck_path(@deck), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), deck_path(@deck), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
